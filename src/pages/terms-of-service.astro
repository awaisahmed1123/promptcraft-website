<style>
  /* Reusing the same style again for consistency */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  .page-content {
    padding-top: 4rem;
    padding-bottom: 5rem;
  }
  .page-content section {
    margin-bottom: 3rem;
  }
  .page-content h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    border-left: 4px solid #FFBF00;
    padding-left: 1rem;
  }
  .page-content p {
    color: #b3b3b3;
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 1rem;
  }
</style>