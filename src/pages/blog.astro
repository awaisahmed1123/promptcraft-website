---
// src/pages/blog.astro
import { getCollection } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro';
import PageHeader from '../components/PageHeader.astro';

// Saare blog posts ko fetch karein aur date ke hisab se sort karein
const allPosts = await getCollection('blog');
allPosts.sort((a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf());
---
<MainLayout>
  <PageHeader 
    title="The PromptCraft Blog"
    subtitle="Guides, tutorials, and inspiration for your AI art journey."
  />
  <div class="container">
    <div class="posts-grid">
      {allPosts.map(post => (
        <a href={`/blog/${post.slug}`} class="post-card">
          <div class="card-image-container">
            <img src={post.data.heroImage} alt={post.data.title} class="card-image"/>
          </div>
          <div class="card-content">
            <h3>{post.data.title}</h3>
            <p>{post.data.description}</p>
            <span class="read-more">Read More â†’</span>
          </div>
        </a>
      ))}
    </div>
  </div>
</MainLayout>

<style>
  .container { max-width: 1200px; margin: 0 auto; padding: 2rem; }
  
  .posts-grid { 
    display: grid; 
    /* FIX: Changed auto-fit to auto-fill */
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); 
    gap: 2rem; 
  }

  .post-card {
    display: flex;
    flex-direction: column;
    background-color: #1e1e1e;
    border: 1px solid #333;
    border-radius: 12px;
    text-decoration: none;
    color: #fff;
    overflow: hidden;
    transition: all 0.3s ease;
  }
  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.5);
    border-color: #FFBF00;
  }
  .card-image-container {
    width: 100%;
    height: 200px;
    background-color: #111;
  }
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .card-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  .card-content h3 {
    font-size: 1.4rem;
    margin-bottom: 0.75rem;
    color: #fff;
    font-family: 'Playfair Display', serif;
  }
  .card-content p {
    color: #b3b3b3;
    margin-bottom: 1.5rem;
    flex-grow: 1;
  }
  .read-more {
    color: #FFBF00;
    font-weight: 700;
    align-self: flex-start;
  }
</style>