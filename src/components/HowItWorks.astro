<style>
  /* ... yahan aapke purane saare styles mojood hain ... */
  .container { max-width: 1200px; margin: 0 auto; padding: 0 2rem; }
  .how-it-works { padding: 5rem 0; border-top: 1px solid #333; }
  .section-header { text-align: center; margin-bottom: 3rem; }
  .tag { display: inline-block; background-color: rgba(255, 191, 0, 0.1); color: #FFBF00; padding: 0.5rem 1rem; border-radius: 50px; font-size: 0.9rem; font-weight: 700; margin-bottom: 1rem; }
