---
// src/components/PageHeader.astro
export interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="page-header">
  <h1>{title}</h1>
  <p>{subtitle}</p>
</div>

<style>
  .page-header {
    text-align: center;
    padding: 4rem 2rem;
    background-color: #191919;
    border-bottom: 1px solid #333;
  }
  .page-header h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  .page-header p {
    font-size: 1.2rem;
    color: #b3b3b3;
    max-width: 600px;
    margin: 0 auto;
  }
</style>